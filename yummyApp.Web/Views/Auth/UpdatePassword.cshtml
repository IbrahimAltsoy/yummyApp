@model yummyApp.Application.Features.Users.Commands.NewPassword.NewPasswordCommandRequest

@{
    ViewBag.Title = "Şifre Güncelleme";
}

<h2>Şifre Güncelleme</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<form asp-action="UpdatePassword" method="post">
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="Token" />

    <div class="form-group">
        <label asp-for="NewPassword">Yeni Şifre</label>
        <input asp-for="NewPassword" type="password" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

   @*  <div class="form-group">
        <label for="ConfirmPassword">Yeni Şifre (Tekrar)</label>
        <input name="ConfirmPassword" type="password" class="form-control" />
    </div> *@

    <button type="submit" class="btn btn-primary">Şifreyi Güncelle</button>
</form>